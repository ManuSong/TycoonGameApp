<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreenActivity"
    android:background="@drawable/bung_bg_img">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="붕어빵\n타이쿤"
        android:textSize="85dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bazzi"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/main_start_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="시작하기"
        android:textColor="@color/black"
        android:fontFamily="@font/binggraesamanco"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/howto_btn"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:id="@+id/howto_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="하는방법"
        android:textColor="@color/black"
        android:fontFamily="@font/binggraesamanco"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_start_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>