<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReslutActivity"
    android:background="@drawable/bung_bg_img">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reslut_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최종 점수 : "
                android:textSize="35dp"
                android:fontFamily="@font/binggraesamanco"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/reslut_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결과!!!"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:fontFamily="@font/binggraesamanco"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>


            <Button
                android:id="@+id/restart_btn"
                android:layout_width="140dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reslut_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/reslut_btn"
                android:text="다시 시작!"
                android:textSize="25dp"
                android:fontFamily="@font/bazzi"/>

            <Button
                android:id="@+id/goto_home_btn"
                android:layout_width="140dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restart_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/reslut_btn"
                android:text="홈 으로!!"
                android:textSize="25dp"
                android:fontFamily="@font/bazzi"/>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>